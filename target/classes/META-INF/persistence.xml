<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd ">
	<persistence-unit name="UP_MM" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>com.epi.j2ee.domain.Antecedant</class>
		<class>com.epi.j2ee.domain.Assistante</class>
		<class>com.epi.j2ee.domain.Consultation</class>
		<class>com.epi.j2ee.domain.Docteur</class>
		<class>com.epi.j2ee.domain.Facture</class>
		<class>com.epi.j2ee.domain.Ordonnance</class>
		<class>com.epi.j2ee.domain.Patient</class>
		<class>com.epi.j2ee.domain.RendezVous</class>
		<properties>
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="ibernate.show_sql" value="true" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
		</properties>
	</persistence-unit>
</persistence>
